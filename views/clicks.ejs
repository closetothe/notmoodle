<% include ./partials/mech215_header %>

<!-- CONTENT -->
  <div class = "container centered" id="forum">
    <h1>Evil Click Data</h1>

    <table class="table table-striped table-dark" id="click-box">
      <thead class="thead-light"></thead>
        <tr class="not-red">
          <th>Item</th>
          <th>Total</th>
          <th>OS List</th>
          <th>Last</th>
        </tr>
      <tbody>

        <% for (var i = 0; i < clicks.length; i++) {%>
        <% var date = new Date(clicks[i].timestamp); %>
          <tr class="list-item">
            <td class="list-title"><%= clicks[i].what %></td>
            <td class="list-author>"><%= clicks[i].total %></td>
            
            <td class="list-resp">
            	<div class="dropdown">
				  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				    <%= clicks[i].operating_systems[clicks[i].operating_systems.length-1] %>
				  </button>
				  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
				  	<% for(var j = 0; j < clicks[i].operating_systems.length - 1; j++){ %>
				    	<a class="dropdown-item"><%=clicks[i].operating_systems[j]%></a>
				    <% } %>
				  </div>
				</div>
            </td>
            
            <td class="list-date"><%= date.toUTCString() %></td>    
          </tr>
        <% } %>

      </tbody>
    </table>

  </div>
  

  <!-- SCRIPTS -->
