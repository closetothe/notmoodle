<%- include('partials/' + topic + '_header') %>
<link rel="stylesheet" href="/css/create.css">



<div class = "container centered" id="create-form">
	<h1>Post Something</h1>
	<p id="error" class="more-red" hidden><em>You must enter all the fields!</em></p>
	<p id="ajax-error" class="not-red" hidden>A server error occurred and I've been notified. Please try again later.</p>
	<form action="/post" method="POST">
	    <div class="form-group">
	      <input type="text" id="title-box" name="title" class="form-control" placeholder="Title">
	    </div>
	    <div class="form-row">
		    <div class="col">
		      <input type="text" id="name-box" name="user" class="form-control" placeholder="Your Name">
		    </div>
		    <div class="col">
		      <input type="email" id = "email-box" name = "content" class="form-control" placeholder="(Optional) Email notification">
		    </div>
	    </div>
  	</form>
	
	<div id="quill-container" class="bg-white">
		<div id="toolbar" class="border-top"></div>
		<div id="editor" class="border-bottom">
		<!--<p>Enter text here! <em>Use the &lt;/&gt; feature for code snippets.</em></p>-->
		</div>
	</div>
	<button id="submit" class="btn btn-dark">Submit</button>

</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>

<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<script src="/js/quillconfig.js"></script>
<script>
  var topic = '<%=topic%>';
</script>
<script src="/js/submit.js"></script>
<% include ./partials/footer %>
